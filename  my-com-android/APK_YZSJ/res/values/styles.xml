<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="SearchTypeCTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/color_check_text_view</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- 修改搜索类型textView类型 -->
    <style name="ChangeTypeTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/btn_orange</item>
    </style>

    <!-- popuwindow 动画风格 -->
    <style name="Animations" />

    <style name="Animations.GrowFromBottom">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

    <style name="Animations.GrowFromTop">
        <item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>

    <style name="Animations.PopDownMenu">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>

    <!-- 对话框风格 -->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>
    <!-- 应用播放器文字style -->
    <style name="LargeText">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@drawable/text_color_selector</item>
    </style>

    <style name="MiddleText">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@drawable/text_color_selector</item>
    </style>

    <style name="seek_bar_sytle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:max">1000</item>
        <item name="android:maxHeight">12px</item>
        <item name="android:minHeight">12px</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:progress">0</item>
        <item name="android:progressDrawable">@xml/seekbar_style</item>
        <item name="android:thumb">@drawable/video_slide_btn</item>
    </style>

    <!-- 应用顶部返回按钮style -->
    <style name="app_title_back_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_title_back_bg</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textColor">@color/button_color</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">2dp</item>
    </style>

    <style name="vertical_seek_bar_sytle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:max">15</item>
        <item name="android:maxHeight">6dp</item>
        <item name="android:minHeight">6dp</item>
        <item name="android:progress">0</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:progressDrawable">@xml/vertical_seekbar_style</item>
        <item name="android:thumb">@drawable/video_slide_btn</item>
    </style>

</resources>