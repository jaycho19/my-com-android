<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_bar_bg"
        android:padding="5dp" >

        <TextView
            android:id="@+id/type_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="电影"
            android:textColor="@color/text_orange"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/type_tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/type_btn_back" />

        <TextView
            android:id="@+id/type_tv_change_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/type_btn_change" />
    </RelativeLayout>

    <com.dongfang.view.MyHorizontalScrollView
        android:id="@+id/myHorizontalScrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.dongfang.view.MyHorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_bar_type_bg"
        android:drawableLeft="@drawable/search_result"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="  影片列表"
        android:textColor="@color/text_orange"
        android:textStyle="bold"
        android:typeface="serif" />

    <com.dongfang.view.PullToRefreshView
        android:id="@+id/favorite_PullToRefreshView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/type_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </com.dongfang.view.PullToRefreshView>

</LinearLayout>