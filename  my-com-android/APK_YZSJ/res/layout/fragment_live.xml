<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_bar_type_bg" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/live_title"
                android:contentDescription="@string/app_name" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/live_hubeiweishi" />

                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/live_jiangsuweishi" />

                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/live_anhuiweishi" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/live_dongfangdianshitai" />

                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/live_zhejiangweishi" />

                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/live_shenzhenweishi" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/live_tianjinweishi" />

                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/live_shandongweishi" />

                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/live_beijingweishi" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/live_hebeidianshitai" />

                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/live_jiangxiweishi" />

                <ImageView
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher"
                    android:visibility="invisible" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>