<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <android.support.v4.view.ViewPager
        android:id="@+id/imageGallery_viewpage"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/home_kv_temp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageGallery_viewpage"
        android:background="#59E88500" >

        <LinearLayout
            android:id="@+id/imageGallery_ll_fling_desc_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/beige"
            android:gravity="center"
            android:minWidth="40dp"
            android:orientation="horizontal" >
        </LinearLayout>

        <TextView
            android:id="@+id/imageGallery_tv_fling_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/imageGallery_ll_fling_desc_image"
            android:ellipsize="end"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:singleLine="true"
            android:text="kv图描述"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>