<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="当前手机号码"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/login_et_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/user_btn"
            android:inputType="number"
            android:maxLength="11"
            android:padding="5dp"
            android:phoneNumber="true"
            android:text="15631127974"
            android:textColor="#666666"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="请输入验证码"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/login_tv_get_authcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/user_fragment_btn_bg"
                android:clickable="true"
                android:gravity="center"
                android:singleLine="true"
                android:text="获取验证码"
                android:textColor="@color/color_btn_login"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/login_et_authCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/login_tv_get_authcode"
                android:background="@drawable/user_btn"
                android:inputType="number"
                android:maxLength="6"
                android:padding="3dp"
                android:text="888222"
                android:textColor="#666666"
                android:textSize="18sp" >

            </EditText>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/user_fragment_btn_bg"
        android:text="用户登录"
        android:textColor="@color/color_btn_login"
        android:textSize="18sp" />

</LinearLayout>