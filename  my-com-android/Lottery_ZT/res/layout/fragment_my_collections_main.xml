<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_live_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke">
      <include
        android:id="@+id/fragment_my_collections_top_bar"
        layout="@layout/fragment_my_order_list_layout_top_bar" />

    <com.next.lottery.view.TabPageIndicator
        android:id="@+id/fragment_my_collections_main_indicator"
        android:layout_width="fill_parent"
        android:layout_below="@+id/fragment_my_collections_top_bar"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_my_collections_main_viewPager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/fragment_my_collections_main_indicator"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:duplicateParentState="true" />

</RelativeLayout>