<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical" >

    <include
        android:id="@+id/fragment_ensure_order_list_top_bar"
        layout="@layout/activity_user_setting_top_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_02"
        android:gravity="center" >

        <ImageView
            android:id="@+id/activity_search_iv_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/search_clear" />

        <EditText
            android:id="@+id/activity_search_et_searchbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@+id/activity_search_iv_clear"
            android:background="@null"
            android:drawableLeft="@drawable/search_1"
            android:ems="10"
            android:gravity="center"
            android:hint="搜索全部订单"
            android:maxLength="100"
            android:singleLine="true"
            android:textColor="@color/black" >

            <requestFocus />
        </EditText>
    </RelativeLayout>

    <com.next.lottery.view.PullToRefreshView
        android:id="@+id/fragment_my_order_pull_to_refreshview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/fragment_my_order_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarStyle="outsideOverlay" >
        </ListView>
    </com.next.lottery.view.PullToRefreshView>

</LinearLayout>