<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.dongfang.views.ScrollViewExtend
        android:id="@+id/dialog_select_sku_content_sl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d8d8d8"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/dialog_select_sku_content_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp" >

            <LinearLayout
                android:id="@+id/dialog_select_sku_top_title_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d8d8d8"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/dialog_select_sku_tv_titile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="高端大气呢绒大衣"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/dialog_select_sku_stock_tv_number"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="库存： 1"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bababa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#d8d8d8"
                android:orientation="vertical"
                android:padding="5dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" >

                    <TextView
                        android:id="@+id/dialog_select_sku_tv_addnumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/btn_box"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@drawable/tv_color_shopping_sku_add_reduce"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dialog_select_sku_tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/dialog_select_sku_tv_addnumber"
                        android:layout_alignTop="@+id/dialog_select_sku_tv_addnumber"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/dialog_select_sku_tv_addnumber"
                        android:background="@drawable/btn_box"
                        android:ems="2"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/dialog_select_sku_tv_reducenumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/dialog_select_sku_tv_number"
                        android:background="@drawable/btn_box"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@drawable/tv_color_shopping_sku_add_reduce"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/dialog_select_sku_tv_reducenumber"
                        android:text="购买数量"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#bababa" />
            </LinearLayout>
        </LinearLayout>
    </com.dongfang.views.ScrollViewExtend>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFE7E7E7"
        android:gravity="center"
        android:padding="10dp" >

        <TextView
            android:id="@+id/dialog_select_sku_tv_buy_now"
            style="@style/textview_goods_detail_bottom"
            android:background="@drawable/btn_red_02_round"
            android:text="立即购买" />

        <TextView
            android:id="@+id/dialog_select_sku_tv_add_shopping_cart"
            style="@style/textview_goods_detail_bottom"
            android:background="@drawable/btn_red_06_round"
            android:text="加入购物车" />
    </LinearLayout>

</LinearLayout>