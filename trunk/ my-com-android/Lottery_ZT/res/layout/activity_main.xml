<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:panel="http://schemas.android.com/apk/res/com.example.lottery"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        tools:context=".MainActivity" >

        <include layout="@layout/activity_main_top_bar" />

        <FrameLayout
            android:id="@+id/realtabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <android.support.v4.app.FragmentTabHost
            android:id="@android:id/tabhost"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/palegoldenrod" >

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0" />
        </android.support.v4.app.FragmentTabHost>
    </LinearLayout>

    <com.example.lottery.menu.RibbonMenuView
        android:id="@+id/ribbonMenu_mainactivity"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/royalblue"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageview_show_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/ribbonMenu_mainactivity"
        android:background="@color/chocolate"
        android:src="@drawable/ic_launcher" />

    <com.example.lottery.menu.Panel
        android:id="@+id/rightPanel"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        panel:animationDuration="1000"
        panel:content="@+id/panelContent"
        panel:handle="@+id/panelHandle"
        panel:position="right"
        panel:weight="75%p" >

        <ImageView
            android:id="@+id/panelHandle"
            android:src="@drawable/ic_launcher"
            android:layout_width="33dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dip" />

        <TextView
            android:id="@+id/panelContent"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#329999"
            android:gravity="center"
            android:padding="4dip"
            android:text="Expo Interpolator\n\nRight content #1"
            android:textColor="#eee"
            android:textSize="16dip"
            android:textStyle="bold" />
    </com.example.lottery.menu.Panel>

</RelativeLayout>