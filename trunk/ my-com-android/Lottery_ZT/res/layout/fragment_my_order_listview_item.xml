<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whitesmoke"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="订单号：" />

        <TextView
            android:id="@+id/fragment_my_order_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="56388992" />

        <TextView
            android:id="@+id/fragment_my_order_status_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="配送中" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_my_order_item_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/fragment_my_order_show_other_goods_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="10dp"
        android:text="显示剩余商品"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/fragment_my_order_bottom_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/fragment_my_order_bottom_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/fragment_my_order_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="时间：2014-02-12" />

            <TextView
                android:id="@+id/fragment_my_order_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="总额：380元"
                android:textColor="@color/red" />
        </LinearLayout>

        <Button
            android:id="@+id/fragment_my_order_add_comment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:background="@color/transparent"
            android:text="评论" />
    </LinearLayout>

</LinearLayout>