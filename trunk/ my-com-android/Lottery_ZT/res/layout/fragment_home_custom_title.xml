<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center_vertical"
	android:paddingTop="5dip"
	android:paddingBottom="5dip"
	android:paddingLeft="10dip"
	android:background="@color/white" >
	<LinearLayout
	    android:id="@+id/fragment_home_custom_title_layout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:clickable="true"
	    android:focusable="true">
    <TextView
	    android:id="@+id/fragment_home_custom_title_name"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="16sp"
		android:textColor="@color/red"
		android:singleLine="true"
		android:ellipsize="end"
		android:text="销售冠军" />
    </LinearLayout>
    <TextView
	    android:id="@+id/fragment_home_custom_title_tag1"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingRight="5dip"
		android:layout_marginLeft="5dip"
		android:textSize="11sp"
		android:textColor="@color/grey"
		android:singleLine="true"
		android:ellipsize="end"
		android:text="时尚" />
    <TextView
	    android:id="@+id/fragment_home_custom_title_tag2"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="5dip"
		android:textSize="11sp"
		android:textColor="@color/grey"
		android:singleLine="true"
		android:ellipsize="end"
		android:text="潮流" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />
    <TextView
	    android:id="@+id/fragment_home_custom_title_more"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="13sp"
		android:textColor="#666666"
		android:singleLine="true"
		android:ellipsize="end"
		android:focusable="true"
		android:text="更多" />
     <ImageButton
            android:id="@+id/img_btn_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
		android:paddingRight="10dp"
            android:background="@drawable/arrows_2" 
            android:layout_gravity="center_vertical"/>
</LinearLayout> 

