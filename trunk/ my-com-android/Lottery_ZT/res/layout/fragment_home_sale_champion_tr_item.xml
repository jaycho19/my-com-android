<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:background="@drawable/bg_white_grey"
    android:orientation="vertical" >

    <com.dongfang.views.MyImageView
        android:id="@+id/fragment_home_item_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_home_fragment_sale_champion_test" />

    <TextView
        android:id="@+id/fragment_home_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/fragment_home_item_pic"
        android:layout_below="@id/fragment_home_item_pic"
        android:background="@color/white"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:text="veryModa 2014年夏季 新款罗马元素精品凉鞋"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/fragment_home_item_goods_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/fragment_home_item_pic"
        android:layout_below="@+id/fragment_home_item_title"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fragment_home_item_goods_new_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="￥380"
            android:textColor="@color/red"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/fragment_home_item_goods_pri_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="￥390"
            android:textColor="@color/grey"
            android:paddingLeft="5dp"
            android:textSize="11sp" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/fragment_home_item_goods_sale_lin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/fragment_home_item_pic"
        android:layout_below="@+id/fragment_home_item_goods_price"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

    <TextView
        android:id="@+id/fragment_home_item_goods_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:singleLine="true"
        android:text="月销量："
        android:textColor="@color/grey"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/fragment_home_item_goods_sale_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="68888件"
         android:paddingLeft="5dp"
        android:textColor="@color/grey"
        android:textSize="11sp" />
     </LinearLayout>
    

</RelativeLayout>