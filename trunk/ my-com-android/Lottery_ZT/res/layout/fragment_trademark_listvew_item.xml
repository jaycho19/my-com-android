<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/whitesmoke"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/fragment_trade_mark_lin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/fragment_trade_mark_img"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_marginTop="5dp"
            android:focusable="true"
            android:paddingLeft="5dp"
            android:background="@drawable/icon_trade_fragment_test"
            android:paddingRight="5dp" />

        <TextView
            android:id="@+id/fragment_trade_mark_description_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="曼妮芬：2013-2014年 夏季新款XX蕾丝文胸八折优惠，第一次购买还有三重优惠。\n1.购买两件，第二件半价 .\n2.单价超过1000元，立减200元。\n3.仰天长啸，一声一块钱"
            android:textColor="#333333"
            android:textSize="15sp" />

        <!--
             <LinearLayout
            android:id="@+id/fragment_trade_mark_description_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dip"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dip" >
        -->

        <TextView
            android:id="@+id/fragment_trade_mark_open_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="10dip"
            android:paddingBottom="10dp"
            android:paddingTop="8dp"
            android:text="活动详情"
            android:textColor="@color/red"
            android:textSize="13sp"
            android:drawableRight="@drawable/arrows_3" />

        <!-- </LinearLayout> -->
    </LinearLayout>

</LinearLayout>