<?xml version="1.0" encoding="utf-8"?>

<!-- 顶部状态栏，包含登陆和播放历史 -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_bar_bg"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <TextView
        android:id="@+id/tv_topbar_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_gray"
        android:clickable="true"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:text="登陆" />

    <TextView
        android:id="@+id/tv_topbar_playhistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_topbar_login"
        android:background="@drawable/btn_gray"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="播放历史" />

    <TextView
        android:id="@+id/tv_topbar_login_decs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_topbar_playhistory"
        android:text="您好，欢迎回到燕赵视界"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>