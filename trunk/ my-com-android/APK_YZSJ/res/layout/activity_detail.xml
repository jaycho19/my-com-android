<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_bar_bg"
        android:padding="5dp" >

        <TextView
            android:id="@+id/detail_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="电影"
            android:textColor="@color/text_orange"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_gray"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="返回" />
    </RelativeLayout>

    <com.dongfang.view.ScrollViewExtend
        android:id="@+id/scrollViewExtend1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" >

                <com.dongfang.view.MyImageView
                    android:id="@+id/detail_iv_icon"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/image_bg"
                    android:minHeight="120dp"
                    android:minWidth="80dp" />

                <TextView
                    android:id="@+id/detail_tv_movie_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/detail_iv_icon"
                    android:text="Large Text"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/detail_tv_length"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/detail_iv_icon"
                    android:layout_toRightOf="@+id/detail_iv_icon"
                    android:drawableLeft="@drawable/clock"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="TextView"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/detail_btn_play"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_orange"
                    android:text="流畅" />

                <Button
                    android:id="@+id/detail_btn_play_qingxi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_orange"
                    android:text="清晰" />

                <Button
                    android:id="@+id/detail_btn_play_gaoqing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_orange"
                    android:text="高清" />

                <Button
                    android:id="@+id/detail_btn_addfavorite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_orange"
                    android:text="收藏" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_ll_juji_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#666666" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/detail_juji"
                    android:gravity="center"
                    android:text="剧集"
                    android:textColor="@color/text_orange" />
            </LinearLayout>
            <!-- 剧集具体布局 -->

            <LinearLayout
                android:id="@+id/detail_ll_juji_contain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!-- <include layout="@layout/activity_detail_juji" /> -->
                <!-- <include layout="@layout/activity_detail_juji" /> -->
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/detail_tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="iewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextViewTextView"
                android:textColor="@color/white" />

            <!-- <include layout="@layout/activity_detail_tuijian" /> -->


            <!-- <RelativeLayout -->
            <!-- android:id="@+id/rl_fragment_home_item" -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:background="@drawable/item_bar_type_bg" > -->


            <!-- <ImageView -->
            <!-- android:id="@+id/iv_fragment_home_item_channelName" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:layout_alignParentLeft="true" -->
            <!-- android:layout_centerVertical="true" -->
            <!-- android:contentDescription="@string/app_name" /> -->

            <TextView
                android:id="@+id/detail_tv_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bar_type_bg"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="您可能喜欢"
                android:textColor="@color/text_orange" />
            <!-- </RelativeLayout> -->

            <LinearLayout
                android:id="@+id/detail_ll_like_contain_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_ll_like_contain_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>
    </com.dongfang.view.ScrollViewExtend>

</LinearLayout>