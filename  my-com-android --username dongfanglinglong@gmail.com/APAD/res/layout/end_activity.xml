<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_body_line"
    android:orientation="vertical" >

    <include layout="@layout/top_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp" >

            <TableRow
                android:layout_marginBottom="3dp"
                android:gravity="center" >

                <TextView
                    android:layout_width="60dp"
                    android:layout_marginRight="3dip"
                    android:background="#ACC797"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="分类"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_marginRight="3dip"
                    android:background="#ACC797"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="测试项目"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_marginRight="3dip"
                    android:background="#ACC797"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="测试结果"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_marginRight="3dip"
                    android:background="#ACC797"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="测试次数"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="116dp"
                    android:layout_marginRight="3dip"
                    android:background="#ACC797"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="测试时间"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="322dp"
                    android:background="#ACC797"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="测试结果评分"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_marginTop="3dp"
                android:gravity="center" >

                <TextView
                    android:id="@+id/tv_classify"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dip"
                    android:background="@drawable/bg_line03"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="素质"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_marginRight="3dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_testitemDes"
                        android:layout_width="76dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="3dp"
                        android:background="@drawable/bg_line03"
                        android:gravity="center"
                        android:padding="3dip"
                        android:text="身高标准体重"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_testitem"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line03"
                            android:gravity="center"
                            android:padding="3dip"
                            android:text="握力（千克）"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_testitem1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="3dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_line03"
                            android:gravity="center"
                            android:padding="3dip"
                            android:text="体重（千克）"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_testresult"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_line03"
                        android:gravity="center"
                        android:padding="3dip"
                        android:text="41.6"
                        android:textColor="#FF4400"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_testresult1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_line03"
                        android:gravity="center"
                        android:padding="3dip"
                        android:text="75"
                        android:textColor="#FF4400"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_testtimes"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dip"
                    android:background="@drawable/bg_line03"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="1/3	"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_testdate"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dip"
                    android:background="@drawable/bg_line03"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="2013-06-19"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_testgrade"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_line03"
                    android:gravity="center"
                    android:padding="7dip"
                    android:src="@drawable/level_02" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/btn_testagain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:background="@drawable/btn_011_bg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tableLayout1"
            android:layout_alignRight="@+id/tableLayout1"
            android:layout_below="@+id/btn_testagain"
            android:layout_marginTop="60dp"
            android:background="@drawable/center001"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/iv_testresult_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/notice_level02" />

            <TextView
                android:id="@+id/tv_testresult_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="握力评分为2分，说明您手臂的力量较差，容易导致手臂的骨骼（桡骨）骨质少空孔，并增加手臂肌肉劳损和 骨折的风险。科学的力量练习能有效降低风险。"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cardSocketInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tv_testZKTSocketInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_cardSocketInfo"
            android:layout_alignParentRight="true"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </RelativeLayout>

</LinearLayout>