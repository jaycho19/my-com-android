<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout style="@style/top_menu_layout_style" >

        <Button
            android:id="@+id/button_lottery_prizeprovide_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/top_button_back" />

        <TextView
            android:id="@+id/textView1"
            style="@style/top_menu_textview_style"
            android:text="@string/top_title_lottery" />
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_lottery_prizeprovide_prizeprovide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="奖品发放:"
            android:textColor="#FF990000" />

        <Button
            android:id="@+id/button_lottery_prizeprovide_showmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/top_button_showmore" 
            android:visibility="gone"
            />

        <ListView
            android:id="@+id/listview_lottery_prizeprovide_storeinfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_lottery_prizeprovide_showmore"
            android:layout_below="@+id/textView_lottery_prizeprovide_prizeprovide"
            android:paddingBottom="5dp"
            android:paddingTop="20dp" 
            android:paddingLeft="20dp"
            android:background="@drawable/lottery_provider"
            
            >
        </ListView>
    </RelativeLayout>

</LinearLayout>