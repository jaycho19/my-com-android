<?xml version="1.0" encoding="UTF-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" >
        </FrameLayout>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/main_radio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radio_button1"
                android:layout_weight="1"
                android:background="@drawable/main_bottom_button_bg_1_xml"
                android:button="@null"
                android:checked="true"
                android:tag="radio_button1" />

            <RadioButton
                android:id="@+id/radio_button2"
                android:layout_weight="1"
                android:background="@drawable/main_bottom_button_bg_0_xml"
                android:button="@null"
                android:tag="radio_button0" />

            <RadioButton
                android:id="@+id/radio_button3"
                android:layout_weight="1"
                android:background="@drawable/main_bottom_button_bg_2_xml"
                android:button="@null"
                android:tag="radio_button2" />

            <RadioButton
                android:id="@+id/radio_button4"
                android:layout_weight="1"
                android:background="@drawable/main_bottom_button_bg_3_xml"
                android:button="@null"
                android:tag="radio_button3" />

            <RadioButton
                android:id="@+id/radio_button5"
                android:layout_weight="1"
                android:background="@drawable/main_bottom_button_bg_4_xml"
                android:button="@null"
                android:tag="radio_button4" />
        </RadioGroup>
    </LinearLayout>

</TabHost>