<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/activity_shopinfo_topbar"
        android:layout_alignParentTop="true"
        layout="@layout/top_bar" />

    <LinearLayout
        android:id="@+id/activity_shopinfo_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+关注" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+记录点" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_shopinfo_bottom"
        android:layout_below="@+id/activity_shopinfo_topbar"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/shops_adapter_item_iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/shops_adapter_item_tv_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/shops_adapter_item_iv_logo"
            android:text="优衣库" />

        <TextView
            android:id="@+id/shops_adapter_item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/shops_adapter_item_tv_floor"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/shops_adapter_item_tv_floor"
            android:text="电话：2312312145" />

        <TextView
            android:id="@+id/shops_adapter_item_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/shops_adapter_item_tv_name"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/shops_adapter_item_tv_name"
            android:text="上海友谊商城xxxxxx" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/shops_adapter_item_tv_num"
            android:text="介绍" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView4"
            android:text="介绍\n\n\n\n\n介绍\n\n\n介绍" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView5"
            android:text="优惠活动" />

        <TextView
            android:id="@+id/activity_shopinfo_tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView6"
            android:drawableLeft="@drawable/icon_qr_code"
            android:gravity="center_vertical"
            android:text="女装满百减50" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/activity_shopinfo_tv_discount"
            android:drawableLeft="@drawable/icon_qr_code"
            android:gravity="center_vertical"
            android:text="VIP满百减10" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView8"
            android:drawableLeft="@drawable/icon_qr_code"
            android:gravity="center_vertical"
            android:text="会员全场9折" />
    </RelativeLayout>

</RelativeLayout>