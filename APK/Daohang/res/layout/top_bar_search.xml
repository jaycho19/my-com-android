<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_background"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/top_bar_search_iv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:src="@drawable/quxiao" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@+id/top_bar_search_iv_cancel"
        android:background="@drawable/main_top_bar_inputbg"
        android:gravity="center" >

        <ImageView
            android:id="@+id/top_bar_search_iv_yuying"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/main_top_bar_yuying" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/top_bar_search_iv_yuying"
            android:layout_alignLeft="@+id/top_bar_search_iv_yuying"
            android:layout_alignTop="@+id/top_bar_search_iv_yuying"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/line" />

        <ImageView
            android:id="@+id/top_bar_search_iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/main_top_bar_search" />

        <EditText
            android:id="@+id/top_bar_search_et_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/top_bar_search_iv_yuying"
            android:layout_toRightOf="@+id/top_bar_search_iv_search"
            android:background="@null"
            android:maxLength="100"
            android:singleLine="true" />
    </RelativeLayout>

</RelativeLayout>