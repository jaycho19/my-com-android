<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dongfang="http://schemas.android.com/apk/res/com.dongfang.daohang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF1F3"
    android:orientation="vertical" >

    <include
        android:id="@+id/activity_shopinfo_topbar"
        android:layout_alignParentTop="true"
        layout="@layout/top_bar" />

    <LinearLayout
        android:id="@+id/activity_shopinfo_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/activity_shopinfo_btn_addCollect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_bg_1"
            android:gravity="center"
            android:text="+关注"
            android:textColor="@color/tv_select_text_color" />

        <Button
            android:id="@+id/activity_shopinfo_btn_addrecord"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_bg_2"
            android:gravity="center"
            android:text="+记录点"
            android:textColor="@color/tv_select_text_color" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_shopinfo_bottom"
        android:layout_below="@+id/activity_shopinfo_topbar"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <com.dongfang.views.MyImageView
            android:id="@+id/activity_shopinfo_iv_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            dongfang:src="@drawable/icon_yyk" />

        <TextView
            android:id="@+id/activity_shopinfo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/activity_shopinfo_iv_logo"
            android:text="优衣库"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/activity_shopinfo_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/activity_shopinfo_name"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/activity_shopinfo_name"
            android:layout_marginTop="5dp"
            android:text="电话：2312312145" />

        <TextView
            android:id="@+id/activity_shopinfo_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/activity_shopinfo_tel"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/activity_shopinfo_tel"
            android:layout_marginTop="5dp"
            android:text="上海友谊商城xxxxxx" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/activity_shopinfo_iv_logo"
            android:layout_marginTop="15dp"
            android:text="介绍:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_shopinfo_tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView4"
            android:text="介绍\n\n介绍\n\n介绍" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_shopinfo_tv_description"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#999999" />

            <TextView
                android:id="@+id/activity_shopinfo_tv_market_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/activity_market"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="    女装满百减50"
                android:textColor="@color/tv_select_text_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#999999" />

            <TextView
                android:id="@+id/activity_shopinfo_tv_shop_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/activity_shops"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="    VIP满百减10"
                android:textColor="@color/tv_select_text_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#999999" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>