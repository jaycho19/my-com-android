<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout style="@style/top_menu_layout_style" >

        <Button
            android:id="@+id/button_kzmw_login"
            style="@style/top_menu_button_login_style" />

        <Button
            android:id="@+id/button_kzmw_signe"
            style="@style/top_menu_button_sign_style" />

        <TextView
            android:id="@+id/textview_kzmw_top_title"
            style="@style/top_menu_textview_style"
            android:text="@string/top_title_dicos" />
    </RelativeLayout>

    <!-- android:background="@color/dicosyellow" -->
    <!-- android:paddingBottom="10dp" -->
    <!-- android:paddingTop="10dp" -->

    <com.dongfang.dicos.view.MyHorizontalScrollView
        android:id="@+id/my_horizontal_scroll_view_kazm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/dicosgreen"
        android:scrollbars="none"
        android:visibility="gone" >

        <com.dongfang.dicos.view.SubMenuLayout
            android:id="@+id/submenulayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </com.dongfang.dicos.view.MyHorizontalScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center" 
        android:gravity="center"
        >

        <LinearLayout
            android:id="@+id/ll_fling_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:minHeight="100dp" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_fling_desc_image"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ll_fling_view"
            android:gravity="center"
            android:minHeight="20dp" >
        </LinearLayout>
        <!-- <ImageSwitcher -->
        <!-- android:id="@+id/imageswitcher_kzmw_info" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" > -->
        <!-- </ImageSwitcher> -->

        <Button
            android:id="@+id/button_kzmw_ipad3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/win_prizes_btn"
            android:paddingLeft="15dp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>