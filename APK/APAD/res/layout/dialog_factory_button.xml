<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_1_testresult_des"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/center001"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/dialog_textview_context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/notice_level01"
        android:padding="5dp"
        android:text="请正确放置体测卡，确保数据正常读写"
        android:textColor="@color/black"
        android:textSize="26sp" />

    <Button
        android:id="@+id/dialog_btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/btn_013_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="重新再试一次"
        android:textColor="@color/white"
        android:textSize="24sp" />

</LinearLayout>