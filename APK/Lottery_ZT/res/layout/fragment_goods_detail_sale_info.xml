<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_goods_detail_goods"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="5dp" >

    <TextView
        android:id="@+id/fragment_goods_detail_dofavour_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:drawableTop="@drawable/icon_favourite"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="收藏" />

    <View
        android:id="@+id/fragment_goods_detail_dofavour_view"
        android:layout_width="0.1dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fragment_goods_detail_dofavour_tv"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/fragment_goods_detail_dofavour_tv"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/fragment_goods_detail_title"
        style="@style/goods_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/fragment_goods_detail_dofavour_tv"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/fragment_goods_detail_dofavour_view"
        android:background="@color/white"
        android:gravity="left|center_vertical"
        android:paddingBottom="6dp"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:text="veryModa 2014年夏季 新款罗马元素精品凉鞋激情呈现" />

    <LinearLayout
        android:id="@+id/fragment_goods_detail_goods_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/fragment_goods_detail_title"
        android:layout_below="@+id/fragment_goods_detail_title"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="6dp" >

        <TextView
            android:id="@+id/fragment_goods_detail_goods_new_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:singleLine="true"
            android:text="￥380"
            android:textColor="@color/red"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/fragment_goods_detail_goods_pri_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:text="￥390"
            android:textColor="@color/grey"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_cuxiao" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_goods_detail_goods_sale_lin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/fragment_goods_detail_title"
        android:layout_below="@+id/fragment_goods_detail_goods_price"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="6dp" >

        <TextView
            android:id="@+id/fragment_goods_detail_goods_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:singleLine="true"
            android:text="月销量："
            android:textColor="@color/grey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/fragment_goods_detail_goods_sale_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="68888件"
            android:textColor="@color/grey"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>